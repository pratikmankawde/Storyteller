<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- Required to access Downloads folder on Android 11+ -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <application
        android:name=".DramebazApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/ic_launcher_round"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.Dramebaz">
        <!-- Native libraries required for LiteRT-LM GPU backend (OpenCL acceleration) -->
        <uses-native-library android:name="libvndksupport.so" android:required="false"/>
        <uses-native-library android:name="libOpenCL.so" android:required="false"/>
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Dramebaz.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Dramebaz" />
        <activity
            android:name=".ui.test.TestActivity"
            android:exported="true"
            android:theme="@style/Theme.Dramebaz"
            android:label="Test Activities" />

        <service
            android:name=".playback.service.AudioPlaybackService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />
        <!-- ChapterAnalysisService for chapter analysis
             Note: Previously ran in :onnx process but caused broadcast issues.
             ONNX failures are now handled with try-catch in QwenStub. -->
        <service
            android:name=".ai.llm.ChapterAnalysisService"
            android:exported="false" />

        <!-- CharacterAnalysisForegroundService for 2-pass character analysis
             Uses foreground service with wake lock to prevent OS from freezing
             the app during long-running LLM inference when screen is off.
             stopWithTask="true" ensures service stops when app is closed (swiped from recents). -->
        <service
            android:name=".ai.llm.CharacterAnalysisForegroundService"
            android:exported="false"
            android:stopWithTask="true"
            android:foregroundServiceType="dataSync" />
    </application>
</manifest>
