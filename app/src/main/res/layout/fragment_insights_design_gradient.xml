<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient_orange_pink">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Book Header -->
        <TextView android:id="@+id/book_title" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="26sp" android:textStyle="bold" android:textColor="@android:color/white" />
        <TextView android:id="@+id/book_author" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="14sp" android:textColor="@android:color/white" android:alpha="0.9" android:layout_marginBottom="20dp" />

        <!-- Stats Cards Row -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
            <com.google.android.material.card.MaterialCardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                android:layout_marginEnd="6dp" app:cardCornerRadius="12dp" app:cardBackgroundColor="#80FFFFFF">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="12dp" android:gravity="center">
                    <TextView android:id="@+id/stat_chapters" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:textSize="24sp" android:textStyle="bold" android:textColor="#D84315" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Chapters" android:textSize="10sp" android:textColor="#5D4037" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                android:layout_marginStart="3dp" android:layout_marginEnd="3dp" app:cardCornerRadius="12dp" app:cardBackgroundColor="#80FFFFFF">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="12dp" android:gravity="center">
                    <TextView android:id="@+id/stat_characters" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:textSize="24sp" android:textStyle="bold" android:textColor="#D84315" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Characters" android:textSize="10sp" android:textColor="#5D4037" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                android:layout_marginStart="6dp" app:cardCornerRadius="12dp" app:cardBackgroundColor="#80FFFFFF">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="12dp" android:gravity="center">
                    <TextView android:id="@+id/stat_dialogs" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:textSize="24sp" android:textStyle="bold" android:textColor="#D84315" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dialogs" android:textSize="10sp" android:textColor="#5D4037" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Reading Level Card -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardBackgroundColor="#80FFFFFF">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Reading Level" android:textSize="12sp" android:textColor="#5D4037" />
                <TextView android:id="@+id/reading_level_value" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textSize="18sp" android:textStyle="bold" android:textColor="#D84315" android:layout_marginTop="4dp" />
                <TextView android:id="@+id/reading_ease_value" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textSize="12sp" android:textColor="#5D4037" android:layout_marginTop="2dp" />
                <TextView android:id="@+id/vocab_complexity_value" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textSize="12sp" android:textColor="#5D4037" android:layout_marginTop="2dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Emotional Arc Card -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardBackgroundColor="#80FFFFFF">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Emotional Journey" android:textSize="14sp" android:textStyle="bold" android:textColor="#5D4037" />
                <com.dramebaz.app.ui.insights.EmotionalArcView android:id="@+id/emotional_arc_view"
                    android:layout_width="match_parent" android:layout_height="140dp" android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sentiment Card -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardBackgroundColor="#80FFFFFF">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Sentiment" android:textSize="14sp" android:textStyle="bold" android:textColor="#5D4037" />
                    <com.google.android.material.chip.Chip android:id="@+id/sentiment_tone_chip" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                </LinearLayout>
                <com.dramebaz.app.ui.insights.SentimentDistributionView android:id="@+id/sentiment_view"
                    android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Plot Outline Card -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardBackgroundColor="#80FFFFFF">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Story Arc" android:textSize="14sp" android:textStyle="bold" android:textColor="#5D4037" />
                <com.dramebaz.app.ui.insights.PlotOutlineView android:id="@+id/plot_outline_view"
                    android:layout_width="match_parent" android:layout_height="120dp" android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Themes Card -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardBackgroundColor="#80FFFFFF">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Themes" android:textSize="14sp" android:textStyle="bold" android:textColor="#5D4037" />
                <com.google.android.material.chip.ChipGroup android:id="@+id/themes_chip_group"
                    android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Vocabulary Card -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardBackgroundColor="#80FFFFFF">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Vocabulary" android:textSize="14sp" android:textStyle="bold" android:textColor="#5D4037" />
                <LinearLayout android:id="@+id/vocabulary_container" android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical" android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Foreshadowing Card -->
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content"
            app:cardCornerRadius="12dp" app:cardBackgroundColor="#80FFFFFF">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Foreshadowing" android:textSize="14sp" android:textStyle="bold" android:textColor="#5D4037" />
                <com.dramebaz.app.ui.insights.ForeshadowingView android:id="@+id/foreshadowing_view"
                    android:layout_width="match_parent" android:layout_height="100dp" android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>

