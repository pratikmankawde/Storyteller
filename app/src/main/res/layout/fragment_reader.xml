<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <!-- AUG-041: Degraded mode banner (shown when LLM or TTS is in fallback mode) -->
    <LinearLayout
        android:id="@+id/degraded_mode_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/warning_background"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_dialog_alert"
            android:layout_marginEnd="8dp"
            android:contentDescription="Warning" />

        <TextView
            android:id="@+id/degraded_mode_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/warning_text"
            android:textSize="12sp"
            android:text="Running in limited mode" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/degraded_mode_retry"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Retry"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button.TextButton" />
    </LinearLayout>

    <!-- FrameLayout to stack recap card on top of ViewPager2 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- ViewPager2 for 3D page turning experience -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager_novel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/surface" />

        <!-- Recap card overlay (shown at top when applicable) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/recap_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:visibility="gone"
            app:cardElevation="8dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/accent_light">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/recap_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Previouslyâ€¦"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:drawableStart="@android:drawable/ic_menu_recent_history"
                    android:drawablePadding="8dp" />
                <TextView
                    android:id="@+id/recap_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingMultiplier="1.5" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/recap_listen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Listen"
                        android:drawableStart="@android:drawable/ic_media_play"
                        android:drawablePadding="8dp"
                        style="@style/Widget.Material3.Button.TonalButton" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/recap_skip"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Skip"
                        style="@style/Widget.Material3.Button.TextButton" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Hidden body TextView for compatibility with legacy code paths -->
        <TextView android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- FAB for jumping to current playing page -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_play_current_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@android:drawable/ic_media_play"
            android:contentDescription="Play current page"
            android:visibility="gone"
            app:fabSize="normal"
            app:backgroundTint="@color/primary" />
    </FrameLayout>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/reader_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        android:background="@color/surface">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- UI-003: Character Avatar Bubble for showing current speaker -->
            <com.dramebaz.app.ui.reader.CharacterAvatarView
                android:id="@+id/character_avatar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone" />

            <!-- Progress Indicator -->
            <ProgressBar
                android:id="@+id/reading_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginBottom="12dp"
                android:progressTint="@color/primary"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_play"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Play"
                    android:drawableStart="@android:drawable/ic_media_play"
                    android:drawablePadding="8dp"
                    style="@style/Widget.Material3.Button" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_mode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Mode: Mixed"
                    android:drawableStart="@android:drawable/ic_menu_sort_by_size"
                    android:drawablePadding="8dp"
                    style="@style/Widget.Material3.Button.TonalButton" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_player_controls"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Controls"
                    android:drawableStart="@android:drawable/ic_menu_preferences"
                    android:drawablePadding="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_bookmark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Bookmark"
                    android:drawableStart="@android:drawable/ic_menu_agenda"
                    android:drawablePadding="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
