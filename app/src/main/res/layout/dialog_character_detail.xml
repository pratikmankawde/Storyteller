<?xml version="1.0" encoding="utf-8"?>
<!-- Character Detail Bottom Sheet Dialog - similar to VoiceSelectorDialog -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background"
    android:paddingBottom="24dp">

    <!-- Drag Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/settings_drag_handle" />

    <!-- Character Header with Avatar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical">

        <!-- Small Avatar -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/primary"
                android:src="@android:drawable/ic_menu_myplaces"
                app:tint="@color/on_primary"
                android:padding="10dp" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/character_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Character Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/character_traits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female, 30s, Brave"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Dialog Count Badge -->
        <TextView
            android:id="@+id/dialog_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@drawable/badge_background"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:maxHeight="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Personality Summary Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personality"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingMultiplier="1.3" />

            <!-- Relationships Section -->
            <TextView
                android:id="@+id/relationships_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Relationships"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:paddingTop="12dp"
                android:paddingBottom="4dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/relationships"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingMultiplier="1.3"
                android:visibility="gone" />

            <!-- Key Moments Section -->
            <TextView
                android:id="@+id/key_moments_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Key Moments"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:paddingTop="12dp"
                android:paddingBottom="4dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/key_moments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingMultiplier="1.3"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_view_dialogs"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Dialogs"
            android:visibility="gone"
            app:icon="@android:drawable/ic_menu_sort_by_size" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_change_voice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Change Voice"
            app:icon="@drawable/ic_tune" />
    </LinearLayout>
</LinearLayout>

