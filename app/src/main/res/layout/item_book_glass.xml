<?xml version="1.0" encoding="utf-8"?>
<!-- Glassmorphism style book card with frosted glass effect -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#40FFFFFF"
    app:cardBackgroundColor="#20FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Book cover with rounded corners -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/book_cover"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="?attr/colorSurfaceContainerHighest"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@android:drawable/ic_menu_gallery" />

        <!-- Title -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/book_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@android:color/white"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/book_cover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/book_cover"
            tools:text="The Great Adventure" />

        <!-- Format badge -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/book_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:background="@drawable/badge_background_m3"
            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toEndOf="@id/book_cover"
            app:layout_constraintTop_toBottomOf="@id/book_title"
            tools:text="PDF" />

        <!-- Status row -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@id/book_cover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/book_cover">

            <!-- Favorite icon -->
            <ImageView
                android:id="@+id/favorite_indicator"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_favorite"
                android:visibility="gone"
                app:tint="#FFCDD2"
                android:contentDescription="@string/toggle_favorite" />

            <!-- Analysis status -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/analysis_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textColor="#B0FFFFFF"
                android:visibility="gone"
                tools:text="Analyzing..." />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

