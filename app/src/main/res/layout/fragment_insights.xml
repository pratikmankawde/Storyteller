<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insights"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="24dp" />

        <!-- AUG-027: Reading Statistics Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reading Statistics"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:drawableStart="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/stat_chapters"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chapters"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/stat_characters"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Characters"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/stat_dialogs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dialogs"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>
                </LinearLayout>

                <!-- INS-004: Reading Level Display -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/reading_level_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reading Level"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />
                        <TextView
                            android:id="@+id/reading_level_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Analyzing..."
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/reading_level_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        style="@style/Widget.Material3.Chip.Assist" />
                </LinearLayout>

                <!-- INS-004: Reading Complexity Breakdown -->
                <LinearLayout
                    android:id="@+id/complexity_breakdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/stat_reading_ease"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reading Ease"
                            android:textSize="10sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/stat_avg_sentence"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avg Words/Sent"
                            android:textSize="10sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/stat_vocab_complexity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vocab Complexity"
                            android:textSize="10sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- AUG-022: Emotional Arc Card with visual display -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emotional Arc"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:drawableStart="@android:drawable/ic_menu_recent_history"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/emotional_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingMultiplier="1.5" />

                <!-- INS-001: Enhanced Emotional Arc Line Graph -->
                <com.dramebaz.app.ui.insights.EmotionalArcView
                    android:id="@+id/emotional_arc_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="12dp" />

                <!-- INS-001: Emotion Legend -->
                <LinearLayout
                    android:id="@+id/emotion_legend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

                <!-- Emotional arc visualization container (legacy fallback) -->
                <LinearLayout
                    android:id="@+id/emotional_arc_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:visibility="gone" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- INS-003: Sentiment Distribution Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/sentiment_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sentiment Distribution"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:drawableStart="@android:drawable/ic_menu_compass"
                        android:drawablePadding="8dp" />

                    <!-- Tone badge -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/sentiment_tone_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balanced"
                        android:textSize="12sp"
                        style="@style/Widget.Material3.Chip.Assist" />
                </LinearLayout>

                <!-- Sentiment bar chart -->
                <com.dramebaz.app.ui.insights.SentimentDistributionView
                    android:id="@+id/sentiment_distribution_view"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />

                <!-- Legend -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="16dp">
                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/circle_green"
                            android:layout_marginEnd="4dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Positive"
                            android:textSize="11sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="16dp">
                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/circle_grey"
                            android:layout_marginEnd="4dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Neutral"
                            android:textSize="11sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/circle_red"
                            android:layout_marginEnd="4dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Negative"
                            android:textSize="11sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- AUG-029: Themes Card with expandable details -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Themes &amp; Symbols"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:drawableStart="@android:drawable/ic_menu_sort_by_size"
                        android:drawablePadding="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_analyze_themes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Analyze"
                        android:textSize="12sp"
                        style="@style/Widget.Material3.Button.TonalButton" />
                </LinearLayout>

                <TextView
                    android:id="@+id/themes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingMultiplier="1.5" />

                <!-- AUG-029: Symbols section -->
                <TextView
                    android:id="@+id/symbols_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Symbols"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="12dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/symbols"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingMultiplier="1.5"
                    android:layout_marginTop="4dp"
                    android:visibility="gone" />

                <!-- AUG-029: Foreshadowing section -->
                <TextView
                    android:id="@+id/foreshadowing_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Foreshadowing"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="12dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/foreshadowing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingMultiplier="1.5"
                    android:layout_marginTop="4dp"
                    android:visibility="gone" />

                <!-- INS-002: Foreshadowing Timeline Visualization -->
                <com.dramebaz.app.ui.insights.ForeshadowingView
                    android:id="@+id/foreshadowing_view"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- INS-005: Plot Outline Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/plot_outline_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Story Structure"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:drawableStart="@android:drawable/ic_menu_compass"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/plot_outline_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Story arc visualization"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <com.dramebaz.app.ui.insights.PlotOutlineView
                    android:id="@+id/plot_outline_view"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="8dp" />

                <!-- Plot points legend -->
                <LinearLayout
                    android:id="@+id/plot_points_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- AUG-028: Vocabulary Builder Card with interactive words -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Vocabulary Builder"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:drawableStart="@android:drawable/ic_menu_edit"
                        android:drawablePadding="8dp" />

                    <!-- AUG-028: Filter toggle -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_show_unlearned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unlearned"
                        android:textSize="12sp"
                        style="@style/Widget.Material3.Chip.Filter" />
                </LinearLayout>

                <TextView
                    android:id="@+id/vocabulary_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp" />

                <!-- AUG-028: Vocabulary list container -->
                <LinearLayout
                    android:id="@+id/vocabulary_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/vocabulary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingMultiplier="1.5"
                    android:visibility="gone" />

                <!-- AUG-028: Export button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_export_vocab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Export Vocabulary"
                    android:textSize="12sp"
                    style="@style/Widget.Material3.Button.TextButton" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
