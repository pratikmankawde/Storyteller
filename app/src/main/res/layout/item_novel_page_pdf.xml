<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="8dp"
    android:clipToPadding="false"
    android:clipChildren="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFEF7">

        <!-- PDF Page as rendered bitmap -->
        <ImageView
            android:id="@+id/pdf_page_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/pdf_page_content_description"
            tools:src="@drawable/ic_launcher_background" />

        <!-- Loading indicator -->
        <ProgressBar
            android:id="@+id/loading_indicator"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Highlight overlay for audio sync (semi-transparent rectangle) -->
        <View
            android:id="@+id/highlight_overlay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#30448AFF"
            android:visibility="gone" />

        <!-- Page number overlay -->
        <TextView
            android:id="@+id/page_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:background="#80FFFFFF"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            tools:text="Page 45" />

        <!-- Error state -->
        <LinearLayout
            android:id="@+id/error_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="32dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@android:drawable/ic_dialog_alert"
                android:contentDescription="@string/error_icon_description"
                app:tint="@color/text_secondary" />

            <TextView
                android:id="@+id/error_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/pdf_render_error"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:textAlignment="center" />

            <!-- Fallback text content (shown when PDF rendering fails) -->
            <ScrollView
                android:id="@+id/fallback_scroll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/fallback_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:lineSpacingMultiplier="1.4"
                    android:textColor="@color/text_primary"
                    android:fontFamily="serif" />

            </ScrollView>

        </LinearLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>

