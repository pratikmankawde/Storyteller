<?xml version="1.0" encoding="utf-8"?>
<!-- CHARACTER-001: Vertical card layout with circle avatar at top and info below -->
<!-- Uses 2:3 width-to-height aspect ratio for consistent card sizing -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Main card body - positioned below the avatar circle, with 2:3 aspect ratio -->
    <!-- H,2:3 means height is calculated from width with ratio width:height = 2:3 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/character_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="H,2:3"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/divider"
        app:cardBackgroundColor="@color/card_background"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="44dp"
            android:paddingBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_horizontal">

            <!-- Character Name -->
            <TextView
                android:id="@+id/character_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="John Doe" />

            <!-- Character Traits -->
            <TextView
                android:id="@+id/character_traits"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="center"
                android:maxLines="5"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                tools:text="Brave, Loyal, Intelligent" />

            <!-- Dialog count badge -->
            <TextView
                android:id="@+id/dialog_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:textColor="?attr/colorPrimary"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="12 dialogs" />

            <!-- AUG-031: Voice inconsistency warning -->
            <LinearLayout
                android:id="@+id/voice_warning_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/voice_warning_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/stat_notify_error"
                    android:contentDescription="Voice inconsistency warning"
                    app:tint="#FF9800" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Voice needs attention"
                    android:textSize="11sp"
                    android:textColor="#FF9800" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Character Avatar - overlapping the top of the card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/avatar_container"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="36dp"
        app:cardElevation="6dp"
        app:strokeWidth="3dp"
        app:strokeColor="@color/surface">

        <ImageView
            android:id="@+id/character_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/surface_variant"
            android:src="@android:drawable/ic_menu_myplaces"
            app:tint="@color/text_secondary"
            android:padding="16dp" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Invisible spacer to ensure ConstraintLayout wraps to card height -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/character_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
