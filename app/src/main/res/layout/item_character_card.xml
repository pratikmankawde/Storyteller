<?xml version="1.0" encoding="utf-8"?>
<!-- CHARACTER-002: Redesigned vertical card with 2:3 aspect ratio -->
<!-- Avatar inside card, Material 3 styling, styled dialog count badge -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/character_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/divider"
    app:cardBackgroundColor="@color/card_background"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- Inner ConstraintLayout with 2:3 aspect ratio -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:padding="12dp">

        <!-- Character Avatar - circular, inside card at top -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/avatar_container"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="32dp"
            app:cardElevation="4dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/primary_light">

            <ImageView
                android:id="@+id/character_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/surface_variant"
                android:src="@android:drawable/ic_menu_myplaces"
                app:tint="@color/text_secondary"
                android:padding="14dp"
                android:contentDescription="@string/character_avatar" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Character Name -->
        <TextView
            android:id="@+id/character_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/avatar_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="John Doe" />

        <!-- Character Traits -->
        <TextView
            android:id="@+id/character_traits"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/character_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom_container"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"
            android:maxLines="4"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.15"
            tools:text="Brave, Loyal, Intelligent, Caring" />

        <!-- Bottom container for dialog badge and voice warning -->
        <LinearLayout
            android:id="@+id/bottom_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Dialog count badge with background -->
            <TextView
                android:id="@+id/dialog_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:background="@drawable/bg_dialog_badge"
                android:textSize="11sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="12 dialogs" />

            <!-- AUG-031: Voice inconsistency warning -->
            <LinearLayout
                android:id="@+id/voice_warning_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/voice_warning_icon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@android:drawable/stat_notify_error"
                    android:contentDescription="@string/voice_warning"
                    app:tint="@color/warning_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/voice_needs_attention"
                    android:textSize="10sp"
                    android:textColor="@color/warning_text" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
