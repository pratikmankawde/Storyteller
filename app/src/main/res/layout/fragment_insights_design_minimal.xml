<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Book Header -->
        <TextView android:id="@+id/book_title" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="28sp" android:textStyle="bold" android:textColor="#1A1A1A" android:lineSpacingMultiplier="1.1" />
        <TextView android:id="@+id/book_author" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="14sp" android:textColor="#666666" android:layout_marginTop="4dp" android:layout_marginBottom="32dp" />

        <!-- Stats as simple text -->
        <TextView android:id="@+id/stats_text" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="14sp" android:textColor="#888888" android:layout_marginBottom="32dp" />

        <!-- Divider -->
        <View android:layout_width="40dp" android:layout_height="2dp" android:background="#1A1A1A" android:layout_marginBottom="32dp" />

        <!-- Reading Level -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Reading Level" android:textSize="12sp" android:textColor="#888888" android:textAllCaps="true" android:letterSpacing="0.1" />
        <TextView android:id="@+id/reading_level_text" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="16sp" android:textColor="#1A1A1A" android:layout_marginTop="8dp" android:layout_marginBottom="32dp" />

        <!-- Divider -->
        <View android:layout_width="40dp" android:layout_height="2dp" android:background="#1A1A1A" android:layout_marginBottom="32dp" />

        <!-- Emotional Arc -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Emotional Arc" android:textSize="12sp" android:textColor="#888888" android:textAllCaps="true" android:letterSpacing="0.1" />
        <com.dramebaz.app.ui.insights.EmotionalArcView android:id="@+id/emotional_arc_view"
            android:layout_width="match_parent" android:layout_height="120dp" android:layout_marginTop="16dp" android:layout_marginBottom="32dp" />

        <!-- Divider -->
        <View android:layout_width="40dp" android:layout_height="2dp" android:background="#1A1A1A" android:layout_marginBottom="32dp" />

        <!-- Sentiment -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Sentiment" android:textSize="12sp" android:textColor="#888888" android:textAllCaps="true" android:letterSpacing="0.1" />
        <TextView android:id="@+id/sentiment_text" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="14sp" android:textColor="#1A1A1A" android:layout_marginTop="8dp" android:lineSpacingMultiplier="1.5" android:layout_marginBottom="32dp" />

        <!-- Divider -->
        <View android:layout_width="40dp" android:layout_height="2dp" android:background="#1A1A1A" android:layout_marginBottom="32dp" />

        <!-- Themes -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Themes" android:textSize="12sp" android:textColor="#888888" android:textAllCaps="true" android:letterSpacing="0.1" />
        <TextView android:id="@+id/themes_text" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="14sp" android:textColor="#1A1A1A" android:layout_marginTop="8dp" android:layout_marginBottom="32dp" />

        <!-- Divider -->
        <View android:layout_width="40dp" android:layout_height="2dp" android:background="#1A1A1A" android:layout_marginBottom="32dp" />

        <!-- Vocabulary -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Vocabulary" android:textSize="12sp" android:textColor="#888888" android:textAllCaps="true" android:letterSpacing="0.1" />
        <LinearLayout android:id="@+id/vocabulary_container" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_marginTop="16dp" android:layout_marginBottom="32dp" />

        <!-- Divider -->
        <View android:layout_width="40dp" android:layout_height="2dp" android:background="#1A1A1A" android:layout_marginBottom="32dp" />

        <!-- Plot Summary -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Story Structure" android:textSize="12sp" android:textColor="#888888" android:textAllCaps="true" android:letterSpacing="0.1" />
        <TextView android:id="@+id/plot_summary" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="14sp" android:textColor="#1A1A1A" android:layout_marginTop="8dp" android:lineSpacingMultiplier="1.6" android:layout_marginBottom="32dp" />

        <!-- Divider -->
        <View android:layout_width="40dp" android:layout_height="2dp" android:background="#1A1A1A" android:layout_marginBottom="32dp" />

        <!-- Foreshadowing -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Foreshadowing" android:textSize="12sp" android:textColor="#888888" android:textAllCaps="true" android:letterSpacing="0.1" />
        <com.dramebaz.app.ui.insights.ForeshadowingView android:id="@+id/foreshadowing_view"
            android:layout_width="match_parent" android:layout_height="100dp" android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>

