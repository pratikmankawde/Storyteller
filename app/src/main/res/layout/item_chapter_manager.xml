<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:checkedIcon="@android:drawable/checkbox_on_background"
    app:checkedIconTint="@color/primary"
    android:checkable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Checkbox for selection -->
        <CheckBox
            android:id="@+id/checkbox_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/primary" />

        <!-- Chapter Order Badge -->
        <TextView
            android:id="@+id/chapter_order"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:textColor="@color/on_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="1" />

        <!-- Chapter Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- Editable Title -->
            <EditText
                android:id="@+id/edit_chapter_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionDone"
                tools:text="Chapter 1: The Beginning" />

            <!-- Chapter Stats -->
            <TextView
                android:id="@+id/chapter_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                tools:text="1,234 words â€¢ Analyzed" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Move Up -->
            <ImageButton
                android:id="@+id/btn_move_up"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/arrow_up_float"
                android:contentDescription="@string/move_up"
                app:tint="@color/text_secondary" />

            <!-- Move Down -->
            <ImageButton
                android:id="@+id/btn_move_down"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/arrow_down_float"
                android:contentDescription="@string/move_down"
                app:tint="@color/text_secondary" />

            <!-- More Actions Menu -->
            <ImageButton
                android:id="@+id/btn_more_actions"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_more"
                android:contentDescription="@string/more_actions"
                app:tint="@color/text_secondary" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

