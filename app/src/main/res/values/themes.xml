<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Using Material 3 (Material3) theme -->
    <style name="Theme.Dramebaz" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorOnPrimaryContainer">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorSurfaceContainerHigh">@color/surface_variant</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="materialButtonStyle">@style/Widget.Dramebaz.Button</item>
        <!-- Default UI font: Bellota Regular -->
        <item name="android:fontFamily">@font/bellota_regular</item>
        <item name="fontFamily">@font/bellota_regular</item>
    </style>

    <!-- Buttons: readable text size (16sp). Use Material 3 parents. -->
    <style name="Widget.Dramebaz.Button" parent="Widget.Material3.Button">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Widget.Dramebaz.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Widget.Dramebaz.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Widget.Dramebaz.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- Splash: no title bar, glassmorphism gradient background -->
    <style name="Theme.Dramebaz.Splash" parent="Theme.Dramebaz">
        <item name="android:windowBackground">@drawable/gradient_glass_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">#1A237E</item>
        <item name="android:navigationBarColor">#4A148C</item>
    </style>

    <!-- App title text appearance: larger, bold -->
    <style name="TextAppearance.Dramebaz.AppTitle" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/bellota_regular</item>
        <item name="fontFamily">@font/bellota_regular</item>
    </style>

    <!-- Shape appearance for book cards with right-side rounded corners (0dp left, 8dp right) -->
    <style name="ShapeAppearance.Library.BookCard.RightRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

    <!-- Shape appearance for book cover images with right-side rounded corners -->
    <style name="ShapeAppearance.Library.BookCover.RightRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>
