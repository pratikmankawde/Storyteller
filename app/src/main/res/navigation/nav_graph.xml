<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/libraryFragment">

    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.dramebaz.app.ui.library.LibraryFragment"
        android:label="Library"
        tools:layout="@layout/fragment_library">
        <action android:id="@+id/action_library_to_book" app:destination="@id/bookDetailFragment" />
        <action android:id="@+id/action_library_to_storyGeneration" app:destination="@id/storyGenerationFragment" />
    </fragment>
    <fragment
        android:id="@+id/storyGenerationFragment"
        android:name="com.dramebaz.app.ui.story.StoryGenerationFragment"
        android:label="Generate Story"
        tools:layout="@layout/fragment_story_generation" />
    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.dramebaz.app.ui.library.BookDetailFragment"
        android:label="Book"
        tools:layout="@layout/fragment_book_detail">
        <argument android:name="bookId" app:argType="long" />
        <action android:id="@+id/action_bookDetail_to_reader" app:destination="@id/readerFragment" />
    </fragment>
    <fragment
        android:id="@+id/readerFragment"
        android:name="com.dramebaz.app.ui.reader.ReaderFragment"
        android:label="Reader"
        tools:layout="@layout/fragment_reader">
        <argument android:name="bookId" app:argType="long" />
        <argument android:name="chapterId" app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/charactersFragment"
        android:name="com.dramebaz.app.ui.characters.CharactersFragment"
        android:label="Characters"
        tools:layout="@layout/fragment_characters">
        <argument android:name="bookId" app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="com.dramebaz.app.ui.characters.CharacterDetailFragment"
        android:label="Character"
        tools:layout="@layout/fragment_character_detail">
        <argument android:name="characterId" app:argType="long" />
        <action android:id="@+id/action_characterDetailFragment_to_voicePreviewFragment" app:destination="@id/voicePreviewFragment" />
        <action android:id="@+id/action_characterDetailFragment_to_speakerSelectionFragment" app:destination="@id/speakerSelectionFragment" />
    </fragment>
    <fragment
        android:id="@+id/voicePreviewFragment"
        android:name="com.dramebaz.app.ui.characters.VoicePreviewFragment"
        android:label="Voice Preview"
        tools:layout="@layout/fragment_voice_preview">
        <argument android:name="characterId" app:argType="long" />
        <argument android:name="characterName" app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/speakerSelectionFragment"
        android:name="com.dramebaz.app.ui.characters.SpeakerSelectionFragment"
        android:label="Select Speaker"
        tools:layout="@layout/fragment_speaker_selection">
        <argument android:name="characterId" app:argType="long" />
        <argument android:name="characterName" app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.dramebaz.app.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/bookmarksFragment"
        android:name="com.dramebaz.app.ui.bookmarks.BookmarksFragment"
        android:label="Bookmarks"
        tools:layout="@layout/fragment_bookmarks">
        <argument android:name="bookId" app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/insightsFragment"
        android:name="com.dramebaz.app.ui.insights.InsightsFragment"
        android:label="Insights"
        tools:layout="@layout/fragment_insights">
        <argument android:name="bookId" app:argType="long" />
    </fragment>
</navigation>
