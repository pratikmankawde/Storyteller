<?xml version="1.0" encoding="utf-8"?>
<!-- Neumorphic inset/pressed effect background -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Light inner shadow (top-left) -->
    <item
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#C4CCD9" />
        </shape>
    </item>
    <!-- Dark inner shadow (bottom-right) -->
    <item
        android:left="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    <!-- Inset surface -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp" />
            <solid android:color="#D1D9E6" />
        </shape>
    </item>
</layer-list>

